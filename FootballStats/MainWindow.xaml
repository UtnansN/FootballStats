<Window x:Class="FootballStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballStats"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <Label x:Name="MainLabel" Content="Fantasy football" Height="50" Margin="10,10,10,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="872" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center"/>
        <Button x:Name="AddGameButton" Content="Pievienot spēles" HorizontalAlignment="Left" Height="39" Margin="10,65,0,0" VerticalAlignment="Top" Width="172" Click="AddGameButton_Click" FontWeight="Bold"/>
        <TabControl HorizontalAlignment="Left" Height="400" Margin="10,109,0,0" VerticalAlignment="Top" Width="872">
            <TabItem Header="Turnīra tabula">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TOP spēlētāji">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
